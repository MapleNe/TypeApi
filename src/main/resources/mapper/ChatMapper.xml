<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.TypeApi.dao.ChatDao">

    <resultMap id="BaseResultMap" type="com.TypeApi.entity.Chat" >
        <result column="id" property="id" />
        <result column="sender_id" property="sender_id" />
        <result column="receiver_id" property="receiver_id" />
        <result column="created" property="created" />
        <result column="lastTime" property="lastTime" />
        <result column="type" property="type" />
        <result column="name" property="name" />
        <result column="avatar" property="avatar" />
    </resultMap>

    <sql id="Base_Column_List">
        `id`,
        `sender_id`,
        `receiver_id`,
        `created`,
        `lastTime`,
        `type`,
        `name`,
        `avatar`
    </sql>

    <!-- 插入数据 -->
    <insert id="insert" parameterType="com.TypeApi.entity.Chat" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO ${prefix}_chat
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test ='null != id'>
                `id`,
            </if>
            <if test ='null != sender_id'>
                `sender_id`,
            </if>
            <if test ='null != receiver_id'>
                `receiver_id`,
            </if>
            <if test ='null != created'>
                `created`,
            </if>
            <if test ='null != lastTime'>
                `lastTime`,
            </if>
            <if test ='null != type'>
                `type`,
            </if>
            <if test ='null != name'>
                `name`,
            </if>
            <if test ='null != avatar'>
                `avatar`
            </if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test ='null != id'>
                #{id},
            </if>
            <if test ='null != sender_id'>
                #{sender_id},
            </if>
            <if test ='null != receiver_id'>
                #{receiver_id},
            </if>
            <if test ='null != created'>
                #{created},
            </if>
            <if test ='null != lastTime'>
                #{lastTime},
            </if>
            <if test ='null != type'>
                #{type},
            </if>
            <if test ='null != name'>
                #{name},
            </if>
            <if test ='null != avatar'>
                #{avatar}
            </if>
        </trim>
    </insert>

    <!-- 批量插入数据 -->
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO ${prefix}_chat ( <include refid="Base_Column_List" /> ) VALUES
        <foreach collection="list" item="curr" index="index" separator=",">
            (
            #{curr.id},
            #{curr.sender_id},
            #{curr.receiver_id},
            #{curr.created},
            #{curr.lastTime},
            #{curr.type},
            #{curr.name},
            #{curr.avatar}
            )
        </foreach>
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.TypeApi.entity.Chat">
        UPDATE ${prefix}_chat
        <set>
            <if test ='null != sender_id'>`sender_id` = #{sender_id},</if>
            <if test ='null != receiver_id'>`receiver_id` = #{receiver_id},</if>
            <if test ='null != created'>`created` = #{created},</if>
            <if test ='null != lastTime'>`lastTime` = #{lastTime},</if>
            <if test ='null != type'>`type` = #{type},</if>
            <if test ='null != name'>`name` = #{name},</if>
            <if test ='null != avatar'>`avatar` = #{avatar}</if>
        </set>
        WHERE `id` = #{id}
    </update>

    <!-- 删除 -->
    <delete id="delete">
        DELETE FROM ${prefix}_chat
        WHERE `id` = #{key}
    </delete>

    <!-- 批量删除 -->
    <delete id="batchDelete" parameterType = "java.util.List">
        DELETE FROM ${prefix}_chat WHERE id IN
        <foreach collection="list"  item="item" open="(" separator="," close=")"  >
            #{item}
        </foreach>
    </delete>

    <!-- 主键查询 -->
    <select id="selectByKey" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ${prefix}_chat
        WHERE `id` = #{key}
    </select>

    <!-- 条件查询 -->
    <select id="selectList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ${prefix}_chat
        <where>
            <if test ='null != id'>
                and `id` = #{id}
            </if>
            <if test ='null != sender_id'>
                and `sender_id` = #{sender_id}
            </if>
            <if test ='null != receiver_id'>
                and `receiver_id` = #{receiver_id}
            </if>
            <if test ='null != created'>
                and `created` = #{created}
            </if>
            <if test ='null != lastTime'>
                and `lastTime` = #{lastTime}
            </if>
            <if test ='null != type'>
                and `type` = #{type}
            </if>
        </where>
        order by created desc
    </select>

    <!-- 分页条件查询 -->
    <select id="selectPage" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ${prefix}_chat
        <where>
            <if test ='null != chat.id'>
                and `id` = #{chat.id}
            </if>
            <if test ='null != chat.sender_id'>
                and (`sender_id` = #{chat.sender_id} or `receiver_id` = #{chat.sender_id})
            </if>
            <if test ='null != chat.receiver_id'>
                and (`receiver_id` = #{chat.receiver_id} or `sender_id` = #{chat.receiver_id})
            </if>
            <if test ='null != chat.created'>
                and `created` = #{chat.created}
            </if>
            <if test ='null != chat.lastTime'>
                and `lastTime` = #{chat.lastTime}
            </if>
            <if test ='null != chat.type'>
                and `type` = #{chat.type}
            </if>
            <if test ='null != searchKey'>
                and CONCAT(IFNULL(`name`, '')) LIKE CONCAT('%', #{searchKey}, '%')
            </if>
        </where>
        <if test ='"" != order'>
            order by ${order}
        </if>
        limit #{page,jdbcType=INTEGER}, #{pageSize,jdbcType=INTEGER}
    </select>

    <!-- 总量查询 -->
    <select id="total" resultType="java.lang.Integer">
        SELECT count(*) FROM ${prefix}_chat
        <where>
            <if test ='null != id'>
                and `id` = #{id}
            </if>
            <if test ='null != sender_id'>
                and `sender_id` = #{sender_id}
            </if>
            <if test ='null != receiver_id'>
                and `receiver_id` = #{receiver_id}
            </if>
            <if test ='null != created'>
                and `created` = #{created}
            </if>
            <if test ='null != lastTime'>
                and `lastTime` = #{lastTime}
            </if>
            <if test ='null != type'>
                and `type` = #{type}
            </if>
        </where>
    </select>
</mapper>